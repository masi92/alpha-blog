<% unless notice.nil? %>
  <div class="alert alert-success col-md-8 offset-md-2" id="notice">
    <%= notice %>
    <a href="#" class="close" data-dismiss="alert">&#215;</a>
  </div>
<% end %>
<h1 align="center">Welcome to <%= current_user.username %>'s page</h1>
<div class="row">
    <div class="col-md-12 col-md-offset-4 center">
      <%= link_to gravatar_for(current_user.email), user_path(current_user) %>
    </div>
</div>
<h4 align="center"><%= current_user.username %>'s articles</h4>


