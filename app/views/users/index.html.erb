<h1 align="center"> All Alpha Bloggers </h1>
<br>
<div align="center">
    <% @users.each do |user| %>
        <ul class="listing">
            <div class="row">
                <div class="card kayttajat bg-light col-md-4 offset-md-4">
                    <li><%= link_to gravatar_for(user.email), user_path(user) %></li>
                    <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </li>
                    <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                    <% if logged_in? and current_user.admin? %>
                        <li><%= link_to "Delete this user", users_path(), method: :delete, data: { confirm: "Are you sure you want to delete this user and all their articles?" } %></li>
                    <% end %>
                </div>
            </div>
        </ul>
    <% end %>
    <div class="centered">
        <%= will_paginate %>
    </div>
</div>
